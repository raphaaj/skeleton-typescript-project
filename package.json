{
  "name": "skeleton-typescript-project",
  "version": "1.0.0",
  "description": "A skeleton project for typescript projects",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:clean": "rimraf build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:clean": "rimraf coverage",
    "lint": "eslint ./src ./test --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint ./src ./test --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:check": "prettier --check ./src ./test",
    "prettier:write": "prettier --write ./src ./test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raphael-jorge/skeleton-typescript-project.git"
  },
  "author": {
    "name": "Raphael Jorge",
    "url": "https://github.com/raphael-jorge"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/raphael-jorge/skeleton-typescript-project/issues"
  },
  "homepage": "https://github.com/raphael-jorge/skeleton-typescript-project#readme",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.2.0",
    "prettier": "2.4.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
