{
  "name": "skeleton-typescript-project",
  "version": "0.0.0",
  "description": "A skeleton project for typescript projects",
  "main": "src/hello-world.ts",
  "scripts": {
    "prebuild": "npm run build:clean",
    "build": "tsc -p tsconfig.build.json",
    "build:clean": "rimraf build",
    "test": "jest",
    "pretest:coverage": "npm run test:clean",
    "test:coverage": "jest --coverage",
    "test:clean": "rimraf coverage",
    "lint": "eslint ./src ./tests --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint ./src ./tests --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:check": "prettier --check ./src ./tests",
    "prettier:write": "prettier --write ./src ./tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raphael-jorge/skeleton-typescript-project.git"
  },
  "author": {
    "name": "Raphael Jorge",
    "url": "https://github.com/raphael-jorge"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/raphael-jorge/skeleton-typescript-project/issues"
  },
  "homepage": "https://github.com/raphael-jorge/skeleton-typescript-project#readme",
  "devDependencies": {
    "@types/jest": "^27.5.0",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^27.5.1",
    "prettier": "2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
