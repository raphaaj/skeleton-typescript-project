{
  "name": "skeleton-typescript-project",
  "version": "1.0.0",
  "description": "A skeleton project for typescript projects",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:clean": "rimraf build",
    "test": "jest --no-cache",
    "test:coverage": "jest --no-cache --coverage",
    "test:clean": "rimraf coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raphael-jorge/skeleton-typescript-project.git"
  },
  "author": {
    "name": "Raphael Jorge",
    "url": "https://github.com/raphael-jorge"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/raphael-jorge/skeleton-typescript-project/issues"
  },
  "homepage": "https://github.com/raphael-jorge/skeleton-typescript-project#readme",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.0.0",
    "jest": "^26.6.3",
    "prettier": "2.4.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
